    <!--初始化组件库页面-->
    <select id="queryComponent" resultType="com.tfjybj.ftdp.model.ComponentModel">
        SELECT groupName,groupId,componentId,groupSequence,isUsable
        FROM tin_componentlibrary
        ORDER BY groupSequence ASC
    </select>

    <!--更新组件-->
     <update id="updateComponentGroupPlace" >
        UPDATE tin_componentlibrary SET groupSequence=#{groupSequence} WHERE groupId=#{groupId}
    </update>

    <!--启用组件-->
    <update id="updateComponentIsUsableOpen">
        UPDATE tin_templategroup SET isUsable=0 WHERE id =#{id};
    </update>

    <!--停用组件-->
    <update id="updateComponentIsUsableOff">
        UPDATE tin_templategroup SET isUsable=1 WHERE id=#{id};
    </update>
